{
  "name": "starter",
  "version": "1.0.0",
  "description": "A quick up and running node ts project",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.+(ts|json|js|)\"",
    "analyze": "yarn format && yarn lint",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "yarn build --watch",
    "test": "jest",
    "server": "nodemon --exec node build/Main.js",
    "start": "tsc  && concurrently \"yarn run build:watch\" \"yarn run server\""
  },
  "author": "ctobolski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "concurrently": "^4.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-node": "^10.0.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.8.3"
  }
}

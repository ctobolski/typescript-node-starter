{
  "name": "starter",
  "version": "1.0.0",
  "description": "A quick up and running node ts project",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.+(ts|json|js|)\"",
    "analyze": "yarn format && yarn lint",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "yarn build --watch",
    "test": "jest",
    "server": "nodemon --exec node build/Main.js",
    "start": "tsc  && concurrently \"yarn run build:watch\" \"yarn run server\""
  },
  "author": "ctobolski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "4.2.5",
    "jest": "^26.0.100",
    "lint-staged": "10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "lint-staged" : {
    "*.ts": [
      "eslint --ext ts", 
      "prettier --parser typescript --write"
    ]
  }
}

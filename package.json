{
  "name": "starter",
  "version": "1.0.0",
  "description": "A quick up and running node ts project",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "bundle:watch": "webpack --watch",
    "server": "nodemon --exec node build/server.js",
